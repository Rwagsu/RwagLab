<Page x:Class="RwagLab.Views.Pages.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:RwagLab.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
      mc:Ignorable="d">
    <NavigationView x:Name="SettingsNavigationView" 
                    IsBackButtonVisible="Collapsed"
                    IsBackEnabled="False"
                    IsSettingsVisible="False"
                    PaneDisplayMode="Top">
        <!-- Items -->
        <NavigationView.MenuItems>
            <!-- AboutSettings -->
            <NavigationViewItem x:Uid="SettingsPage_AboutSettingsNavigationViewItem"
                                Tag="AboutSettings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE74C;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <!-- ThemeSettings -->
            <NavigationViewItem x:Uid="SettingsPage_ThemeSettingsNavigationViewItem" Tag="ThemeSettings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE790;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

        </NavigationView.MenuItems>

        <NavigationView.Resources>
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
        </NavigationView.Resources>

        <!-- Events -->
        <Interactivity:Interaction.Behaviors>
            <!-- Navigate to Page -->
            <Interactivity:EventTriggerBehavior EventName="SelectionChanged">
                <Interactivity:InvokeCommandAction Command="{Binding NavigateToPageCommand}" />
            </Interactivity:EventTriggerBehavior>
        </Interactivity:Interaction.Behaviors>

        <Frame x:Name="SettingsFrame" />
    </NavigationView>
</Page>
